<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layerType="hardware"
    android:orientation="vertical"
    android:padding="6dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/linearLayout"
        android:layout_toStartOf="@+id/linearLayout"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/alimentRecette"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <GridLayout
                    android:layout_width="307dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:text="@string/pour_100g"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/proteineRecetteTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="@string/proteine_g"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#0044ff" />

                    <TextView
                        android:id="@+id/proteineRecette"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:text="NA"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#0044ff" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_row="1"
                        android:text="     ------     "
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/proteineRecettePortion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_row="1"
                        android:text="NA"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#0044ff" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:text="@string/lipide_g"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#00a505" />

                    <TextView
                        android:id="@+id/lipideRecette"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:text="NA"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#00a505" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_row="2"
                        android:text="     ------     "
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/lipideRecettePortion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_row="2"
                        android:text="NA"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#00a505" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:text="@string/glucide_g"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#c37200" />

                    <TextView
                        android:id="@+id/glucideRecette"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="3"
                        android:text="NA"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#c37200" />

                    <TextView
                        android:id="@+id/portionAlimentEnG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_row="0"
                        android:text="@string/pour_100g"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_row="3"
                        android:text="     ------     "
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/glucideRecettePortion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_row="3"
                        android:text="NA"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#c37200" />
                </GridLayout>
            </LinearLayout>

        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/portionAliment"
            android:layout_width="wrap_content"
            android:layout_height="117dp"
            android:focusable="true"
            android:orientation="vertical" />
    </LinearLayout>
</RelativeLayout>
