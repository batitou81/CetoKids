<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/aliment"
            android:textStyle="bold"
            android:id="@+id/textView4" />

        <EditText
            android:id="@+id/addaliment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="aliment..."
            android:inputType="text" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:orientation="vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/proteine"
            android:textColor="#0044ff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addproteine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0044ff"
            android:hint="0"
            android:inputType="numberDecimal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="0.33"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/lipide"
            android:textColor="#00a505"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addlipide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00a505"
            android:hint="0"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:orientation="vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/glucide"
            android:textColor="#c37200"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addglucide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#c37200"
            android:hint="0"
            android:inputType="numberDecimal" />
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/categorie"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/addcategory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

