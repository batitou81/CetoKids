<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/nom_repas"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/ajoutRepadNom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutTop">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/proteine"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#0044ff" />

            <EditText
                android:id="@+id/ajoutRepadProteine"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_style"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|numberDecimal"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#0044ff"
                android:textCursorDrawable="@null"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lipide"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#00a505" />

            <EditText
                android:id="@+id/ajoutRepadLipide"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_style"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|numberDecimal"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#00a505"
                android:textCursorDrawable="@null"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/glucide"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#c37200" />

            <EditText
                android:id="@+id/ajoutRepadGlucide"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_style"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|numberDecimal"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#c37200"
                android:textCursorDrawable="@null"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMiddleBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutMiddle"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kcal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/kcal"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/kcalResult"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ratioText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ratio_regime"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/ratioResult"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1:1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>